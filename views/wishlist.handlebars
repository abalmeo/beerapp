<section id="brewery-wishlist">
  <div class="container">
    <div class="row">

      <div class="col-lg-6">
        <h2>Try one of these Breweries!</h2>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Brewery</th>
              <th scope="col">Url</th>
            </tr>
          </thead>
        {{#each brewery}} {{#unless tried}}
          <tbody>
            <tr>
              <td>{{this.brewery}}</td>
              <!--<td>{{this.url}}</td>-->
              <td> <button onclick="breweriesVisited({{id}})"  id="change-state" data-id="{{id}}" data-state="{{tried}}">Tried it!</button></td>
            </tr>
          </tbody>
        {{/unless}} {{/each}}
         </table>
      </div>

      <div class="col-lg-6">
        <h2>Breweries you have tried.</h2>
        {{#each brewery }} {{#if tried}}
        <table class="table">
          <thead>
            <tr>
              <th scope="col">Brewery</th>
              <th scope="col">Url</th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>{{this.breweryName}}</td>
              <td>{{this.url}}</td>
            </tr>
          </tbody>
        </table>
        {{/if}} {{/each}}
      </div>

    </div>
  </div>
</section>